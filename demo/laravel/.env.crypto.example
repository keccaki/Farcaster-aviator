# ============================================
# CRYPTO PAYMENT SYSTEM CONFIGURATION
# ============================================
# Copy these variables to your .env file and configure them

# Solana Network Configuration
SOLANA_NETWORK=mainnet
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_WS_ENDPOINT=wss://api.mainnet-beta.solana.com

# Wallet Configuration
SOLANA_MASTER_SEED=your-master-seed-here-keep-this-secret
SOLANA_ENCRYPTION_KEY=your-encryption-key-here

# Token Configuration
USDT_MINT_ADDRESS=Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB

# Transaction Configuration
SOLANA_REQUIRED_CONFIRMATIONS=32
SOLANA_MAX_RETRIES=3
SOLANA_RETRY_DELAY=5
SOLANA_TIMEOUT=30
SOLANA_COMMITMENT=confirmed

# Security Configuration
CRYPTO_AUTO_APPROVAL_LIMIT=100.0
CRYPTO_MANUAL_APPROVAL_LIMIT=1000.0
CRYPTO_DAILY_WITHDRAWAL_LIMIT=10000.0
CRYPTO_FRAUD_DETECTION=true
CRYPTO_MAX_RISK_SCORE=70
CRYPTO_APPROVAL_EXPIRY=24

# Fee Configuration
WITHDRAWAL_FEE_SOL=0.001
WITHDRAWAL_FEE_USDT=1.0
NETWORK_FEE_BUFFER=1.5

# Limits Configuration
MIN_DEPOSIT_SOL=0.01
MIN_DEPOSIT_USDT=5.0
MIN_WITHDRAWAL_SOL=0.01
MIN_WITHDRAWAL_USDT=5.0
MAX_WITHDRAWAL_SOL=1000.0
MAX_WITHDRAWAL_USDT=100000.0

# Monitoring Configuration
CRYPTO_MONITORING_ENABLED=true
CRYPTO_SCAN_INTERVAL=30
CRYPTO_BATCH_SIZE=100
CRYPTO_MAX_BLOCKS_BEHIND=100
CRYPTO_WEBHOOK_URL=

# Exchange Rate Configuration
EXCHANGE_RATE_PROVIDER=coingecko
COINGECKO_API_KEY=your-coingecko-api-key
BINANCE_API_KEY=your-binance-api-key
EXCHANGE_RATE_UPDATE_INTERVAL=300
EXCHANGE_RATE_CACHE_TTL=300

# Hot/Cold Wallet Configuration
HOT_WALLET_THRESHOLD_MAX=1000.0
HOT_WALLET_THRESHOLD_MIN=100.0
HOT_WALLET_AUTO_TRANSFER=true
COLD_WALLET_ADDRESS=your-cold-wallet-address
COLD_WALLET_MULTI_SIG=true
FEE_PAYER_ADDRESS=your-fee-payer-address
FEE_PAYER_PRIVATE_KEY=your-fee-payer-private-key
FEE_PAYER_MIN_BALANCE=1.0

# Logging Configuration
CRYPTO_LOGGING_ENABLED=true
CRYPTO_LOG_LEVEL=info
CRYPTO_LOG_CHANNEL=crypto
CRYPTO_LOG_TRANSACTIONS=true
CRYPTO_LOG_SECURITY_EVENTS=true

# Development Configuration (Set to false in production)
MOCK_BLOCKCHAIN=false
CRYPTO_TEST_MODE=false
SIMULATE_CONFIRMATIONS=false
MOCK_EXCHANGE_RATES=false 